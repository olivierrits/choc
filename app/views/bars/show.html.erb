<div>
    <div class="shop-index-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1511381939415-e44015466834?ixlib=rb-1.2.1&auto=format&fit=crop&w=2038&q=80);">
      <div class="banner-text-background">
       <h1><%= @bar.name %></h1>

  <ul>
    <li><%= "Name: #{@bar.name.downcase.capitalize}" %></li>
    <li><%= "Brand: #{@bar.brand.downcase.capitalize}" %></li>
    <li>
      <% if @bar.beans = 0 %>
      <%= "Cacao Bean: /" %>
    <% else %>
      <%= "Cacao Bean: #{@bar.beans.downcase.capitalize}" %>
    <% end %>
    </li>
    <li><%= "Origin: #{@bar.origin.downcase.capitalize}" %></li>
    <li><%= "Percentage: #{@bar.percentage} %" %></li>
    <li><%= "Ingredients: #{@bar.ingredients.downcase.capitalize}" %></li>
    <li><%= "Description: #{@bar.description.downcase}" %></li>
    <li><%= "Country of Production: #{@bar.production}" %></li>
  </ul>
</div>

<div>
    <div class="shop-index-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://1dc3f33f6d-3.optimicdn.com/gaultmillau.com/photos/6ae3dc3d9e75d53137d88c78c009140d2bde73fe/detail.jpg?1568828009);">
    <div class="banner-text-background">
      <h1><%= @bar.name %></h1>
    </div>
  </div>
  <div style="display: flex;justify-content: space-around; align-items: center;">
    <div style="margin: 20px auto; border: 1px solid #2A2922; width: 300px; background-color: #506D2F;">
      <div style="width: 200px; height: 300px; background-color: #F3EBDD; border: 1px solid #506D2F">
        <h4><%= @bar.name %></h4>
      </div>
      <div style="width: 200px; height: 300px; background-color: #F3EBDD; border: 1px solid #506D2F">
        <h4><%= @bar.brand %></h4>
      </div>
      <div style="width: 200px; height: 300px; background-color: #F3EBDD; border: 1px solid #506D2F">
        <h3><%= "#{@bar.percentage} %"%></h3>
      </div>
      <div style="width: 200px; height: 300px; background-color: #F3EBDD; border: 1px solid #506D2F">
        <h5><%= @bar.beans %></h5>
      </div>
      <div style="width: 200px; height: 300px; background-color: #F3EBDD; border: 1px solid #506D2F">
        <h5><%= "*" * @rating  %></h5>
      </div>
    </div>

  <div class="containerinfos" style="display: flex; justify-content: space-around; align-items: center;">

  <table class="table table-striped">
    <tr class="table-row">
      <th scope="row"><p>Brand: </p></th>
      <td class="columninfos"><h5><%= @bar.brand %></h5></td>
    </tr>
    <tr class="table-row">
      <th scope="row"><p>Percentage: </p></th>
      <td class="columninfos"><h5><%= "#{@bar.percentage} %"%></h5></td>
    </tr>
    <tr class="table-row">
      <th scope="row"><p>Type of bean: </p></th>
      <td class="columninfos"><h5><%= @bar.beans %></h5></td>
    </tr>
    <tr class="table-row">
      <th scope="row"><p>Origin: </p></th>
      <td class="columninfos"><h5><%= @bar.origin %></h5></td>
    </tr>
    <tr class="table-row">
      <th scope="row"><p>Rating: </p></th>
      <td class="columninfos"><h5><%= "*" * @rating  %></h5></td>
    </tr>
  </table>


      <div class="whereto">
        <h4><strong>Where can I find this chocolate bar?</strong></h4>
        <% @bar.shops.each do |shop| %>
        <div class="card-product">
          <div class="">
      </div>
          <div class="card-product-infos">
            <div class="singlecard">
        <h2><%= link_to shop.name, shop_path(shop) %></h2>
      </div>
      <div class="singlecard">
        <p><%= "#{shop.address.street} #{shop.address.number}, #{shop.address.postcode} #{shop.address.city}, #{shop.address.country}"%></p>
      </div>
        </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="bar-reviews">
  <h4><strong><%= @bar.name %> Reviews</strong></h4>
  <%= link_to "Write a Review", new_bar_bar_review_path(@bar) %>
    <% if @bar_reviews.blank? %>
      <h3>There are no reviews for this chocolate bar yet, would you like to add the first one?</h3>
    <% else %>
    <% @bar_reviews.each do |bar_review| %>
      <hr>
      <p style="color: brown;"><%= "*" * bar_review.rating %></p>
      <p><%= bar_review.content %></p>
      <% end %>
    <% end %>
  </div>
</div>
