<h1><%= @bar.name %></h1>
<div>
  <div style="display: flex;justify-content: space-around; align-items: center;">
    <div style="margin: 20px auto; border: 1px solid #2A2922; width: 300px; background-color: #506D2F;">
      <div style="width: 200px; height: 300px; background-color: #F3EBDD; border: 1px solid #506D2F">
        <h4><%= @bar.name %></h4>
      </div>
      <div style="width: 200px; height: 300px; background-color: #F3EBDD; border: 1px solid #506D2F">
        <h4><%= @bar.brand %></h4>
      </div>
      <div style="width: 200px; height: 300px; background-color: #F3EBDD; border: 1px solid #506D2F">
        <h3><%= "#{@bar.percentage} %"%></h3>
      </div>
      <div style="width: 200px; height: 300px; background-color: #F3EBDD; border: 1px solid #506D2F">
        <h5><%= @bar.beans %></h5>
      </div>
      <div style="width: 200px; height: 300px; background-color: #F3EBDD; border: 1px solid #506D2F">
        <h5><%= "*" * @rating  %></h5>
      </div>
    </div>
    <div style="margin: 20px auto; border: 1px solid #2A2922; width: 300px; background-color: #506D2F;">
      <% @bar.shops.each do |shop| %>
        <div class="card-shop">
          <div class="">
            <img src="https://pierreplas.be/wp-content/uploads/2019/09/Coffret_Panachable-Pierre_Plas-1024x681.jpg" />
          </div>
          <div class="card-shop-infos">
            <h2><%= link_to shop.name, shop_path(shop) %></h2>
          </div>
          <div class="card-shop-infos">
            <p><%= "#{shop.address.street} #{shop.address.number}, #{shop.address.postcode} #{shop.address.city}, #{shop.address.country} %"%></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="cards-list">

<div class="card 1">
  <div class="card_image"> <img src="https://i.redd.it/b3esnz5ra34y.jpg" /> </div>
  <div class="card_title title-white">
    <p>Card Title</p>
  </div>
</div>

  <div class="card 2">
  <div class="card_image">
    <img src="https://cdn.blackmilkclothing.com/media/wysiwyg/Wallpapers/PhoneWallpapers_FloralCoral.jpg" />
    </div>
  <div class="card_title title-white">
    <p>Card Title</p>
  </div>
</div>
</div>

<div class="bar-reviews">
        <h3>Bar Reviews</h3>
        <% @bar_reviews.each do |bar_review| %>
          <hr>
          <p style="color: brown;"><%= "*" * bar_review.rating %></p>
          <p><%= bar_review.content %></p>
        <% end %>
      </div>
